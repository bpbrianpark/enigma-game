generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  username      String   @unique
  image     String?
  createdAt DateTime @default(now())

  games     Game[]
}

model Category {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String   
  sparql    String
  imageUrl String?
  isDynamic Boolean  @default(false)
  updateSparql String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
  playedOn DateTime?
  isDaily Boolean?
  hasBeenSelected Boolean?
  tags String[] @default([])

  entries   Entry[]
  difficulties  Difficulty[]
  games     Game[]
  aliases Alias[]

  @@index([isDaily, hasBeenSelected])
  @@index([isDaily, playedOn])
}

model Difficulty {
  id        String  @id @default(cuid())
  category  Category  @relation(fields: [categoryId], references: [id])
  categoryId String

  level Int
  limit Int
  timeLimit Int?

  games Game[]
}

model Entry {
  id         String   @id @default(cuid())
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  label  String 
  norm   String
  url    String @unique
  aliases Alias[]
  count Int @default(0)

  @@index([categoryId, norm])
}

model Alias {
  id       String @id @default(cuid())
  entry    Entry  @relation(fields: [entryId], references: [id])
  entryId  String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  label String
  norm  String

  @@index([entryId, norm])
}

model Game {
  id      String  @id @default(cuid())
  username  String
  slug  String
  difficultyId  String
  time    Int
  targetCount Int?
  correct_count Int
  isBlitzGame Boolean?
  isDailyGame Boolean?
  entriesCounted Boolean @default(false)

  user  User  @relation(fields:[username],references:[username], onDelete: Cascade)
  category  Category  @relation(fields:[slug],references:[slug], onDelete:Cascade)
  difficulty Difficulty @relation(fields: [difficultyId], references: [id], onDelete: Cascade)

  @@index([slug, targetCount, time])
}


